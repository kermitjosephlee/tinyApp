<html>

  <head>
    <title>TinyApp :: The URL Shrinker</title>
  </head>

  <body>

    <header>
        <% include ./partials/_headers %>
    </header>

      <% if (!user){ %>

        <form method="POST" action="/login">

          <label for="email address"> Give me an email address to eat: </label>
          <br />

          <input id="eml" type="email" name="email">
          <br />

          <label for="password"> Secret password time: </label>
          <br />

          <input id="pwd" type="password" name="password">
          <br />

          <input type="submit" value="login">
          <br />

        </form>

      <% } else { %>

          <p>

            <% %>
            user:
          </p>
          <p>
            <%= user.email %>
          </p>
          <p>
            <form action="/logout" method="POST">
              <button>LOGOUT, <%= user.email %></button>
            </form>
          </p>

    <% } %>
  </body>
</html>